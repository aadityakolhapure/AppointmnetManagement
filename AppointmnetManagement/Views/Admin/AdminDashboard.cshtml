@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Online Clinic System</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-gray-100 min-h-screen flex">

    <!-- Sidebar -->
    @Html.Partial("_AdminSidebar")


    <!-- Main Content -->
    <main class="flex-1 p-6">
        <!-- Top Bar -->
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-semibold text-gray-800">Dashboard Overview</h2>
            <div class="flex items-center space-x-4">
                <input type="text" placeholder="Search..." class="px-4 py-2 rounded-lg border focus:outline-none focus:ring-2 focus:ring-red-400" />
                <button class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 flex items-center">
                    <i data-lucide="bell" class="w-5 h-5 mr-2"></i> Notifications
                </button>
            </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white rounded-2xl shadow p-6 flex items-center space-x-4">
                <div class="bg-red-100 p-3 rounded-full">
                    <i data-lucide="users" class="w-8 h-8 text-red-600"></i>
                </div>
                <div>
                    <h3 class="text-gray-500">Total Users</h3>
                    <p class="text-2xl font-bold text-gray-800">1,250</p>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow p-6 flex items-center space-x-4">
                <div class="bg-red-100 p-3 rounded-full">
                    <i data-lucide="calendar" class="w-8 h-8 text-red-600"></i>
                </div>
                <div>
                    <h3 class="text-gray-500">Appointments Today</h3>
                    <p class="text-2xl font-bold text-gray-800">45</p>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow p-6 flex items-center space-x-4">
                <div class="bg-red-100 p-3 rounded-full">
                    <i data-lucide="stethoscope" class="w-8 h-8 text-red-600"></i>
                </div>
                <div>
                    <h3 class="text-gray-500">Active Doctors</h3>
                    <p class="text-2xl font-bold text-gray-800">32</p>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="mt-10 bg-white p-6 rounded-2xl shadow">
            <h3 class="text-xl font-semibold mb-4 flex items-center">
                <i data-lucide="activity" class="w-5 h-5 mr-2 text-red-600"></i> Recent Activity
            </h3>
            <ul class="divide-y divide-gray-200">
                <li class="py-3 flex justify-between">
                    <span>New patient registered</span>
                    <span class="text-gray-500 text-sm">2 mins ago</span>
                </li>
                <li class="py-3 flex justify-between">
                    <span>Appointment approved by Dr. Sharma</span>
                    <span class="text-gray-500 text-sm">15 mins ago</span>
                </li>
                <li class="py-3 flex justify-between">
                    <span>Payment received for consultation</span>
                    <span class="text-gray-500 text-sm">30 mins ago</span>
                </li>
            </ul>
        </div>
    </main>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>
