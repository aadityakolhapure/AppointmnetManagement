@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Doctor</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-gray-100 min-h-screen flex">

    <!-- Sidebar -->
    @Html.Partial("_AdminSidebar")


    <!-- Main Content -->
    <main class="flex-1 p-6">
        <!-- Top Bar -->
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-semibold text-gray-800">Manage Doctor</h2>
            <div class="flex items-center space-x-4">
                <input type="text" placeholder="Search..." class="px-4 py-2 rounded-lg border focus:outline-none focus:ring-2 focus:ring-red-400" />

            </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white rounded-2xl shadow p-6 flex items-center space-x-4">
                <div class="bg-red-100 p-3 rounded-full">
                    <i data-lucide="users" class="w-8 h-8 text-red-600"></i>
                </div>
                <div>
                    <h3 class="text-gray-500">Total Doctor</h3>
                    <p class="text-2xl font-bold text-gray-800">1,250</p>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow p-6 flex items-center space-x-4">
                <div class="bg-red-100 p-3 rounded-full">
                    <i data-lucide="stethoscope" class="w-8 h-8 text-red-600"></i>
                </div>
                <div>
                    <h3 class="text-gray-500">Active Doctors</h3>
                    <p class="text-2xl font-bold text-gray-800">32</p>
                </div>
            </div>
        </div>

        <div class="bg-white shadow-md rounded-2xl p-6 overflow-x-auto mt-4">
            <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                <i data-lucide="list" class="w-5 h-5 text-red-600"></i>
                Doctor List
            </h3>

            <table class="min-w-full border-collapse">
                <thead class="bg-red-600 text-white text-left">
                    <tr>
                        <th class="px-6 py-3 text-sm font-semibold">#</th>
                        <th class="px-6 py-3 text-sm font-semibold">Name</th>
                        <th class="px-6 py-3 text-sm font-semibold">Email</th>
                        <th class="px-6 py-3 text-sm font-semibold">Specialization</th>
                        <th class="px-6 py-3 text-sm font-semibold">Phone</th>
                        <th class="px-6 py-3 text-sm font-semibold text-center">Actions</th>
                    </tr>
                </thead>

                <tbody class="text-gray-700">
                    @{
                        int i = 1;
                        foreach (var doctor in Model)
                        {
                            <tr class="border-b hover:bg-gray-50 transition">
                                <td class="px-6 py-3">@i</td>
                                <td class="px-6 py-3 font-medium">@doctor.FullName</td>
                                <td class="px-6 py-3">@doctor.Email</td>
                                <td class="px-6 py-3">@doctor.Specialization</td>
                                <td class="px-6 py-3">@doctor.Phone</td>
                                <td class="px-6 py-3 text-center space-x-2">
                                    <form action="@Url.Action("EditDoctor", "Admin")" method="post" class="inline">
                                        <input type="hidden" name="DoctorID" value="@doctor.DoctorID" />
                                        <button class="bg-yellow-400 text-white px-3 py-1 rounded-lg hover:bg-yellow-500 inline-flex items-center">
                                            <i data-lucide="edit-2" class="w-4 h-4 mr-1"></i> Edit
                                        </button>
                                    </form>

                                    <form action="@Url.Action("DeleteDoctor", "Admin", new { id = doctor.DoctorID })" method="post">
                                        <button type="submit" class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700 flex items-center">
                                            <i data-lucide="trash" class="w-4 h-4 mr-1"></i> Delete
                                        </button>
                                    </form>


                                </td>
                            </tr>
                            i++;
                        }
                    }
                    
                </tbody>
            </table>
        </div>
    </main>


    <script>
        lucide.createIcons();
    </script>
</body>
</html>
