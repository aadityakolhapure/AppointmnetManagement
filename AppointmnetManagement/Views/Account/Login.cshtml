@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Clinic Appointment</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-gradient-to-br from-red-50 to-white min-h-screen flex items-center justify-center">

    <div class="top-0 left-0 m-4 fixed z-25 text-red-600">
        <a href="/Home/Index">
            <i data-lucide="arrow-left-circle" class="w-8 h-8"></i>
        </a>
    </div>
    <div class="bg-white shadow-2xl rounded-2xl w-full max-w-md p-8 border border-gray-100">

        <!-- Server-side Success Alert -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="flex items-center bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded bottom-0 right-0 mt-4 fixed h-5 z-25 p-4" role="alert">
                <i data-lucide="check-circle" class="w-6 h-6 mr-2"></i>
                <p>@TempData["SuccessMessage"]</p>
            </div>
        }

        <!-- Server-side Error Alert -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="flex items-center bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded bottom-0 right-0 mt-4 fixed h-5 z-25 p-4" role="alert">
                <i data-lucide="alert-circle" class="w-6 h-6 mr-2"></i>
                <p>@TempData["ErrorMessage"]</p>
            </div>
        }

        <div class="text-center mb-6">
            <div class="inline-flex items-center justify-center bg-red-100 p-3 rounded-full">
                <i data-lucide="log-in" class="text-red-600 w-8 h-8"></i>
            </div>
            <h2 class="text-3xl font-bold text-red-600 mt-3">Login</h2>
            <p class="text-gray-500 mt-1">Access your dashboard</p>
        </div>

        <form id="loginForm" method="post" class="space-y-5" asp-action="Login" asp-controller="Account">


            <!-- Email -->
            <div>
                <label class="block text-gray-700 font-medium mb-1">Email</label>
                <div class="relative">
                    <i data-lucide="mail" class="absolute left-3 top-3 text-gray-400 w-5 h-5"></i>
                    <input type="email" id="Email" name="Email" placeholder="Enter your email"
                           class="w-full border border-gray-300 pl-10 pr-4 py-2 rounded-lg focus:ring-2 focus:ring-red-500 focus:outline-none" required />
                </div>
                <p id="EmailError" class="text-red-500 text-sm mt-1 hidden">
                    Please enter a valid email.
                </p>
            </div>

            <!-- Password -->
            <div>
                <label class="block text-gray-700 font-medium mb-1">Password</label>
                <div class="relative">
                    <i data-lucide="lock" class="absolute left-3 top-3 text-gray-400 w-5 h-5"></i>
                    <input type="password" id="Password" name="Password" placeholder="Enter your password"
                           class="w-full border border-gray-300 pl-10 pr-4 py-2 rounded-lg focus:ring-2 focus:ring-red-500 focus:outline-none" required />
                </div>
                <p id="PasswordError" class="text-red-500 text-sm mt-1 hidden">
                    Password must be at least 6 characters.
                </p>
            </div>

            <!-- Submit -->
            <div>
                <button type="submit"
                        class="w-full bg-red-600 text-white py-2 rounded-lg font-semibold hover:bg-red-700 transition flex items-center justify-center space-x-2">
                    <i data-lucide="arrow-right-circle" class="w-5 h-5"></i>
                    <span>Login</span>
                </button>
            </div>

            <div class="text-center text-sm text-gray-600 mt-4">
                Don't have an account?
                <a href="@Url.Action("Register", "Account")" class="text-red-600 font-semibold hover:underline">
                    Register
                </a>
            </div>
        </form>
    </div>

    <script>
        lucide.createIcons();

        const form = document.getElementById("loginForm");
        const email = document.getElementById("Email");
        const password = document.getElementById("Password");
        const emailError = document.getElementById("EmailError");
        const passwordError = document.getElementById("PasswordError");

        form.addEventListener("submit", function (e) {
            let isValid = true;

            emailError.classList.add("hidden");
            passwordError.classList.add("hidden");



            // Password validation
            if (password.value.length < 6) {
                passwordError.classList.remove("hidden");
                isValid = false;
            }

            if (!isValid) e.preventDefault();
        });
    </script>
</body>
</html>
